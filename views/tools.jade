html
  head
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    script(src='/javascript/lib/jquery-1.8.2.js')
    script(src='/javascript/lib/bootstrap.js')
    script(src='/javascript/tools.js')
  body
    div.navbar.navbar-inverse.navbar-static-top
      div.navbar-inner
        a.brand(href='/') BlueJukebox's Site
        ul.nav
          li: a(href='/') blogs
          li: a(href='') about
          //li: a(href='post/edit') new post
          li.active: a(href='#') tools
    div.container-fluid
      div.row-fluid
        div.span6
          h3 hospital
          form.form-horizontal
            div.control-group
              label.control-label name:
              div.controls
                input.name(type="text", placeholder="hospital name")
              label.control-label price:
              div.controls
                input.price(type="text", placeholder="hospital price")
          button#addHospital.btn.btn-primary add
        div.span6
          h3 student
          form.form-horizontal
            div.control-group
              label.control-label class:
              div.controls
                input.name(type="text", placeholder="class")
              label.control-label count:
              div.controls
                input.name(type="text", placeholder="student count")
              label.control-label hospital:
              div.controls
                select.hospital
          button#addStudent.btn.btn-primary add
      div.row-fluid
         table#output.table
          thead
            tr
              td Hospital
              td Price
              td Class
              td Count
              td Class Total
              td Hospital Total
          tbody
            tr
              td Fake Hospital
              td 100
              td Class 101
              td 20
              td 2000
              td --
            tr
              td --
