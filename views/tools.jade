html
  head
    include head
    script(src='/javascript/lib/underscore.js')
    script(src='/javascript/lib/backbone.js')
    script(src='/javascript/tools.js')
  body
    div.navbar.navbar-inverse.navbar-static-top
      div.navbar-inner
        div.container
          a.brand(href='/') BlueJukebox's Site
          ul.nav
            li: a(href='/') blogs
            li: a(href='') about
            //li: a(href='post/edit') new post
            li.active: a(href='#') tools
    div.container
      div.row 
        div.span5
          div.row  
            h3.span5 hospital
          div.row  
            label.span2(for="hospital_name") name:
            input.span3#hospital_name(type="text", placeholder="hospital name")
          div.row
            label.span2 price:
            input.span3#hospital_price(type="text", placeholder="hospital price")
          div.row
            div.span5
              button#addHospital.btn.btn-primary add
        div.span7
          div.row  
            h3.span5 student
          div.row  
            label.span2 class:
            input.span3(type="text", placeholder="class")
          div.row  
            label.span2 count:
            input.span3#students_count(type="text", placeholder="student count")
          div.row
            label.span2 hospital:
            select.span3#students_hospital
            div.control-group.span3
              button#addStudent.btn.btn-primary add
      div.row
        div.span5  
          table.table.table-bordered
            thead#hospitals: tr
              td name
              td price
        div.span7
          table.table.table-bordered
            thead#students: tr
              td class
              td count
              td week
              td hospital
      div.row
        div.span12  
          h3 bill
          table#output.table.table-bordered
            thead: tr
              td Hospital
              td Price
              td Class
              td Count
              td Week
              td Class Total
              td Hospital Total
            tbody
          