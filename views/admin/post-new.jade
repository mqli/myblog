extends ../includes/admin
block scripts 
  script(type="text/javascript",src="/javascript/lib/jquery.cleditor.min.js")
  script
    $(document).ready(function() {
      $("textarea").cleditor({width:'100%', height:250});
    });
block styles
  link(rel="stylesheet",href="/javascript/lib/jquery.cleditor.css")
block content
  div.span9
    form(action='/admin/post/new', method='post')
      label title
      input.span10(name='post[title]',type='text',required)
      label category
      select(name='post[category]',required)
        option(value='')
        for category in categories
          option(value='#{category.name}')=category.name
      label content
      textarea.span10(name='post[content]',rows=20)
      button.btn.btn-primary(type='submit') save