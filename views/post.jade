  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header.page_header
      h1 BlueJukebox's Blog
      nav
        ul
          li: a(href='#') blogs
          li: a(href='#') about
