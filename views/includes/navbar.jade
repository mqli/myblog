div.navbar.navbar-inverse.navbar-fixed-top
  div.navbar-inner
    div.container
      a.brand(href='/') mqli's site
      ul.nav
        li: a(href='/')
          i.icon-home.icon-white
          |home
        li: a(href='#') about
      ul.nav.pull-right
        - if (username)
          li.active: a
            i.icon-user
            =username
          li: a(href="/logout") logout
        - else
          li: a#login(href="/login") login
